{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "indentWidth": 4
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn",
        "noPrototypeBuiltins": "info"
      },
      "style": {
        "noNonNullAssertion": "warn"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  }
}
